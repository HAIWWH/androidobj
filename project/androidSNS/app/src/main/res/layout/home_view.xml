<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:baselineAligned="false"
    android:gravity="center"
    android:isScrollContainer="true"
    android:orientation="vertical" >
 
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="2dip"
         android:gravity="center_vertical"
        android:background="@drawable/top_bar_bg"
        android:stretchColumns="1" > 
        <TableRow > 

             <TextView
 
                 android:layout_width="wrap_content"
                 android:layout_height="28dip"
                 android:layout_marginLeft="2dip"
                 android:gravity="center_vertical"
                 android:text="@string/website_name"
                 android:textColor="#FF000000"
                 android:textSize="28px" />

 			<TextView
 			    android:layout_height="40dip"
 			    android:layout_marginLeft="10dip"
 			    android:gravity="center_vertical"
 			    android:text="@string/website" />

            <ImageView
                android:id="@+id/iv_setting_btn"
               
                android:layout_width="70dip"
                android:layout_height="28dip"
                android:paddingRight="10dip"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:clickable="true" 
                android:src="@drawable/top_bar_set_btn" >
            </ImageView>
        </TableRow>
    </TableLayout>
 
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical" >
    	   
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center"
        android:isScrollContainer="true"
        android:orientation="vertical" >
 
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="160dip" 
		android:baselineAligned="false"
		android:orientation="vertical"
		android:gravity="center" >
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:clickable="true"
		    android:gravity="right"
		    android:src="@drawable/ad" >
		</ImageView>
    </LinearLayout>
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dip" 
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="2dip" >
		 <TextView
 	          android:id="@+id/tv_date_show"
 	          android:layout_width="wrap_content"
 	          android:layout_height="14dip"
 	          android:layout_marginLeft="2dip"
 	          android:gravity="center_vertical"
 	          android:text="2010年10月20日 星期五"
 	          android:textColor="#FF000000"
 	          android:textSize="14px"
 	           />
 	 	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dip" 
        android:layout_gravity="right"
        android:gravity="right" 
        android:orientation="horizontal"
        android:paddingRight="2dip" >
 	      <ImageView
			   
			   	android:scaleType="centerInside"
			    android:layout_width="12dip"
			    android:layout_height="12dip"
			    android:clickable="true"
			    android:layout_marginRight="2dip"
       		    android:layout_gravity="center_vertical"
       		    android:gravity="right"
			    android:src="@drawable/home_img_ratio_selected" >
			</ImageView>
			<ImageView
			   
			    android:scaleType="centerInside"
			    android:layout_width="12dip"
			    android:layout_height="12dip"
			    android:clickable="true"
			    android:layout_marginRight="2dip"
       		    android:layout_gravity="center_vertical"
			    android:src="@drawable/home_img_ratio" >
			</ImageView>
			<ImageView
			   
			    android:scaleType="centerInside"
			    android:layout_width="12dip"
			    android:layout_height="12dip"
			    android:clickable="true"
			    android:layout_marginRight="2dip"
       		    android:layout_gravity="center_vertical"
			    android:src="@drawable/home_img_ratio" >
			</ImageView>
		</LinearLayout>
  	</LinearLayout>
 
 	 
   	<LinearLayout
	       xmlns:android="http://schemas.android.com/apk/res/android"
	       android:layout_width="match_parent"
	       android:layout_height="50dip"
	
	       android:baselineAligned="false"
	       android:gravity="center"
	       android:isScrollContainer="false"
	       android:orientation="horizontal" >
	
	       <ImageView
	           android:id="@+id/iv_login_btn"
	           android:layout_width="123dp"
	           android:layout_height="44dp"
	           android:clickable="true"
	           android:gravity="right"
	           android:src="@drawable/login_btn" />
	 
	       <ImageView
	           android:id="@+id/iv_register_btn"
	           android:layout_width="123dp"
	           android:layout_height="44dp"
	           android:clickable="true"
	           android:gravity="left"
	           android:src="@drawable/register_btn" />
	
	   </LinearLayout>
 
   	    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/home_index_btn"
    android:background="@drawable/home_index_btn" 
    > 
    <ImageView
        android:id="@+id/img"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_margin="5px"
         android:background="@drawable/index_looks"   
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="vertical" > 
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:textSize="28px"
            android:text="搭配/Looks"
             />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:textSize="18px"
            android:text="时尚达人们实拍每日搭配"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:paddingRight="2dip"
       	android:gravity="center_vertical"
        android:orientation="vertical" >
        
   <ImageView
        android:id="@+id/goto_img"
        android:layout_width="10dip"
        android:layout_height="10dip" 
        android:layout_marginRight="2dip"
        android:layout_gravity="right"
        android:src="@drawable/home_index_arrow"
        />
   </LinearLayout>
</LinearLayout>

	    
